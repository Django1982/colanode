# -------------------------------------------------------------
# Required secrets / identifiers
# -------------------------------------------------------------
POSTGRES_USER=colanode_user
POSTGRES_PASSWORD=postgrespass123
POSTGRES_DB=colanode_db

REDIS_PASSWORD=your_valkey_password

STORAGE_S3_ACCESS_KEY=minioadmin
STORAGE_S3_SECRET_KEY=your_minio_password
STORAGE_S3_BUCKET=colanode

SMTP_EMAIL_FROM=your_email@example.com

# -------------------------------------------------------------
# Base application settings
# -------------------------------------------------------------
NODE_ENV=production
SERVER_NAME="Colanode Local"
SERVER_MODE=standalone
ACCOUNT_VERIFICATION_TYPE=automatic
ACCOUNT_OTP_TIMEOUT=600
USER_STORAGE_LIMIT=10737418240
USER_MAX_FILE_SIZE=104857600

# -------------------------------------------------------------
# REST API tokens (defaults, adjust per deployment)
# -------------------------------------------------------------
API_TOKEN_DEFAULT_EXPIRY_DAYS=180
API_TOKEN_MAX_EXPIRY_DAYS=365

# -------------------------------------------------------------
# Database connection string (uses the secrets above)
# -------------------------------------------------------------
POSTGRES_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# -------------------------------------------------------------
# Redis / Valkey
# -------------------------------------------------------------
REDIS_URL=redis://:${REDIS_PASSWORD}@valkey:6379/0
REDIS_DB=0

# -------------------------------------------------------------
# S3-compatible storage (MinIO by default)
# -------------------------------------------------------------
STORAGE_S3_ENDPOINT=http://minio:9000
STORAGE_S3_REGION=us-east-1
STORAGE_S3_FORCE_PATH_STYLE=true

# -------------------------------------------------------------
# SMTP (disabled by default)
# -------------------------------------------------------------
SMTP_ENABLED=false
# SMTP_HOST=smtp
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_EMAIL_FROM_NAME=Colanode
